{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "./node_modules/@openzeppelin"
    ]
  },
  "include": ["./scripts", "./test", "./types"],
  "exclude": ["node_modules"]
}